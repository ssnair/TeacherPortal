<div class="row line-chart">
    <div class="col-md-12">
        <h3>Line Chart</h3>
        <div class="row">
            <div class="row form-inline" ng-show="viewMode=='teacher'">
                <div class="form-group">
                    <label>Title</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.title" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>X Axis Label</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.xAxisTitle" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Y Axis Label</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.yAxisTitle" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <label>Y Axis Min</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.yAxisMin" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Y Axis Max</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.yAxisMax" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Y Axis Scale</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.yAxisScale" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <label>Increment</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.lineChart.yIncrement" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Grid Line</label>
                </div>
                <div class="form-group">
                    <select ng-init="settings.lineChart.gridLineStyle = lineStyles[0]" ng-model="settings.lineChart.gridLineStyle" ng-options="ct.name for ct in lineStyles track by ct.id" ng-change="engine.redraw(settings)" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Graph Line</label>
                </div>
                <div class="form-group">
                    <select ng-init="settings.lineChart.connectorLineStyle = lineStyles[0]" ng-model="settings.lineChart.connectorLineStyle" ng-options="ct.name for ct in lineStyles track by ct.id" ng-change="engine.redraw(settings)" class="form-control"></select>
                </div>
                <br />
                <div class="form-group">
                    <label class="long">Score only if every point value is correct</label>
                </div>
                <div class="form-group">
                    <input type="checkbox" ng-model="settings.lineChart.strictPunctuation" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div ng-scope-element="lineChartDrawingContainer"></div>
                </div>
                <div class="col-md-6" ng-show="viewMode=='teacher'">
                    <div>
                        <div class="row">
                            <div class="col-md-2"><a href="javascript:void(0)" class="btn btn-primary" ng-click="engine.lineChart.addPoint(settings)">Add Point</a></div>
                        </div>                        
                        <div class="row">
                            <div class="col-md-2">Label</div>
                            <div class="col-md-2">Value</div>
                            <div class="col-md-2">Worth</div>
                        </div>
                        <div ng-repeat="p in settings.lineChart.points">
                            <div class="row">
                                <div class="col-md-2">
                                    <input ng-model="p.label" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" maxlength="25" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input ng-model="p.value" ng-enter="engine.lineChart.changeValue(settings,p)" ng-blur="engine.lineChart.changeValue(settings,p)" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input ng-model="p.worth" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <a href="javascript:void(0)" class="btn btn-danger" ng-click="engine.lineChart.removePoint(settings,p)">
                                        <span class="glyphicon glyphicon-minus-sign"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

