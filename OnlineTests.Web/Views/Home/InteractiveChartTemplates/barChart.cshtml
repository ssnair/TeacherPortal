<div class="row bar-chart">
    <div class="col-md-12">
        <h3>Bar Chart</h3>
        <div class="row">
            <div class="row form-inline" ng-show="viewMode=='teacher'">
                <div class="form-group">
                    <label>Title</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.title" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>X Axis Label</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.xAxisTitle" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Y Axis Label</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.yAxisTitle" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <label>Y Axis Min</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.yAxisMin" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Y Axis Max</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.yAxisMax" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Y Axis Scale</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.yAxisScale" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <label>Increment</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.barChart.yIncrement" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Grid Line</label>
                </div>
                <div class="form-group">
                    <select ng-init="settings.barChart.gridLineStyle = lineStyles[0]" ng-model="settings.barChart.gridLineStyle" ng-options="ct.name for ct in lineStyles track by ct.id" ng-change="engine.redraw(settings)" class="form-control"></select>
                </div>
                <br />
                <div class="form-group">
                    <label class="long">Score only if every bar value is correct</label>
                </div>
                <div class="form-group">
                    <input type="checkbox" ng-model="settings.barChart.strictPunctuation" class="form-control" />
                </div>                
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div ng-scope-element="barChartDrawingContainer"></div>
                </div>
                <div class="col-md-6" ng-show="viewMode=='teacher'">
                    <div>
                        <div class="row">
                            <div class="col-md-2"><a href="javascript:void(0)" class="btn btn-primary" ng-click="engine.barChart.addBar(settings)">Add Bar</a></div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">Label</div>
                            <div class="col-md-2">Value</div>
                            <div class="col-md-2">Worth</div>
                            <div class="col-md-2">Color</div>
                        </div>
                        <div ng-repeat="p in settings.barChart.bars">
                            <div class="row">
                                <div class="col-md-2">
                                    <input ng-model="p.label" ng-enter="engine.redraw(settings)" ng-blur="engine.redraw(settings)" maxlength="25" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input ng-model="p.value" ng-enter="engine.barChart.changeValue(settings,p)" ng-blur="engine.barChart.changeValue(settings,p)" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input ng-model="p.worth" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <spectrum-colorpicker ng-model="p.color" ng-change="engine.redraw(settings)" format="'hex'" options="{showInput:true,showPalette:true,showSelectionPalette:true,showInitial:true,hideAfterPaletteSelect:true,palette: defaultColors}">></spectrum-colorpicker>
                                </div>                                
                                <div class="col-md-2">
                                    <a href="javascript:void(0)" class="btn btn-danger" ng-click="engine.barChart.removeBar(settings,p)">
                                        <span class="glyphicon glyphicon-minus-sign"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

