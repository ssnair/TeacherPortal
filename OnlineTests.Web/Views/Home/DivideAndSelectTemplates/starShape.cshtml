<div class="row star-shape">
    <div class="col-md-12">
        <h3>Star</h3>
        <div class="row">
            <div class="row form-inline" ng-show="viewMode=='teacher'">
                <div class="form-group">
                    <label>Peaks</label>
                </div>
                <div class="form-group">
                    <input type="number" ng-model="settings.starShape.peaks" min="3" max="12" ng-change="engine.reset(settings)" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Angle</label>
                </div>
                <div class="form-group">
                    <input type="number" ng-model="settings.starShape.angle" min="0" max="360" ng-change="engine.redraw(settings)" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <label>Worth</label>
                </div>
                <div class="form-group">
                    <input type="text" ng-model="settings.starShape.worth" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Answer Mode</label>
                </div>
                <div class="form-group">
                    <select ng-init="settings.starShape.answerMode = answerModes[0]" ng-model="settings.starShape.answerMode" ng-options="ct.name for ct in answerModes track by ct.id" class="form-control"></select>
                </div>                
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div ng-scope-element="starShapeDrawingContainer"></div>
                </div>
                <div class="col-md-6">
                    <div>
                        <div class="row">
                            <div class="col-md-2">Sector</div>
                            <div class="col-md-2">Selected</div>
                        </div>
                        <div ng-repeat="p in settings.starShape.sectors">
                            <div class="row">
                                <div class="col-md-2">
                                    <input ng-model="p.label" readonly="readonly" class="form-control" />
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" ng-model="p.selected" ng-change="engine.redraw(settings)" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

